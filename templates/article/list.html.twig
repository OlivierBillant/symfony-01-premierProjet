{% extends "layouts/base.html.twig" %}

{% block titre %}
	Liste des articles
{% endblock %}

{% block main %}
	<div class="row title text-center mt-5">
		<h1>Liste des articles</h1>
	</div>
	<div class="col-6 offset-3">
		<br>
		La liste des articles présents en base de donnée est la suivante :
		<br>
	</div>
	<div class="col-9 offset-2">
		<div class="row">
			{% for label,messages in app.flashes %}
				{% for message in messages %}
					<span class="alert alert-{{label}}">
						{{message}}</span>
				{% endfor %}
			{% endfor %}
		</div>
		<table class="table text-align-center">
			<thead>
				<tr>
					<th scope="col">N°</th>
					<th scope="col">Nom</th>
					<th scope="col">Description</th>
					<th scope="col">Prix</th>
					<th scope="col">Utilisateur</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for article in articleList %}
					<tr>
						<td>{{article.id}}</td>
						<td>{{article.name}}</td>
						<td>{{article.description}}</td>
						<td>{{article.price}}</td>
						<td>{{article.owner.prenom}}
							{{article.owner.nom}}</td>
						<td>
							<a class="btn btn-primary" href="{{path('app_lire_article3',{'id':article.id})}}">
								<i class="fa-solid fa-eye"></i>
							</a>
							{% if (app.user) %}
								<a class="btn btn-success" href="{{path('app_article_update',{'id':article.id})}}">
									<i class="fa-solid fa-pen"></i>
								</a>
								{% if is_granted('ROLE_ADMIN') %}
									<a class="btn btn-danger" href="{{path('app_article_remove',{'id':article.id})}}" onclick="return confirm('Etes vous sur?')">
										<i class="fa-solid fa-trash-can"></i>
									</a>
								{% endif %}
							{% endif %}
						</td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
